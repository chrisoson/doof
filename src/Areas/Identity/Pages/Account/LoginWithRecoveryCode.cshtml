@page
@model LoginWithRecoveryCodeModel
@section metatags
{
    <title>Login with recovery code</title>
    <meta name="description" content="Login with recovery code page"/>
    <meta name="keywords" content="Login with recovery code"/>
    <meta name="author" content="doof"/>
}

<p>
    You have requested to log in with a recovery code. This login will not be remembered until you provide
    an authenticator app code at log in or disable 2FA and log in again.
</p>
<div>
    <div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.RecoveryCode" autocomplete="off" placeholder="RecoveryCode" />
                <label asp-for="Input.RecoveryCode"></label>
                <span asp-validation-for="Input.RecoveryCode"></span>
            </div>
            <button type="submit">Log in</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}