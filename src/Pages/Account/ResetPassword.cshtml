@page
@model ResetPasswordModel
@section metatags
{
    <title>Reset password</title>
    <meta name="description" content="Reset password page"/>
    <meta name="keywords" content="Reset password, Reset password page"/>
    <meta name="author" content="doof"/>
}
<h2>Reset your password.</h2>
<hr />
<div>
    <div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword"></span>
            </div>
            <button type="submit">Reset</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
