@page
@model RegisterConfirmationModel

@section metatags
{
  <title>@Localizer["title"]</title>
  <meta name="description" content="@Localizer["meta-desc"]"/>
  <meta name="keywords" content="@Localizer["meta-keywords"]"/>
  <meta name="author" content="doof"/>
}

<section>
  <div class="section-box">
    <h1>@Localizer["title"]</h1>
    @{
      if (@Model.DisplayConfirmAccountLink)
      {
        <p>
          @Localizer["confirm-email"]
          <a id="confirm-link" href="@Model.EmailConfirmationUrl">@Localizer["confirm-link"]</a>
        </p>
      }
      else
      {
        <p>
          @Localizer["check-email"]
        </p>
      }
    }
  </div>
</section>
